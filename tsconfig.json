{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "sourceRoot": "src",
    "mapRoot": "./dist/",
    "outDir": "./dist/",
    "rootDir": "./",
    "baseUrl": "./",
    "skipLibCheck": true,
    "incremental": true,

    "resolveJsonModule": true,

    "strictNullChecks": true,
    "strictPropertyInitialization": false,

    "noImplicitAny": true,
    "strictBindCallApply": false,
    "forceConsistentCasingInFileNames": false,
    "noFallthroughCasesInSwitch": false,
    
    "paths": {
      "@registry:app/*": ["src/registryAPI/app/*"],
      "@registry:service/*": ["src/registryAPI/app/service/*"],
      "@registry:infra/*": ["src/registryAPI/infra/*"],
      "@registry:tests/*": ["src/registryAPI/tests/*"],
      "@registry:utils/*": ["src/registryAPI/utils/*"]
    }
  },
  "include": [
    "**/*.ts"
  ]
}
