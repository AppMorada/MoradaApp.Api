{
	"name": "MoradaApp.Api",
	"main": "dist/src/main",
	"author": "MoradaAPP",
	"license": "MIT",
	"scripts": {
		"build": "nest build",
		"dev": "nest start --watch",
		"start": "node .",
		"lint": "eslint \"{src,tests}/**/*.ts\"",
		"lint:fix": "eslint --fix",
		"format": "prettier --write",
		"test": "dotenv -e .env.test -- jest --coverage",
		"test:e2e": "dotenv -e .env.prod -- jest --config ./jest.e2e.config.ts --coverage",
		"set-hooks": "husky install",
		"pre-commit": "pnpm test && lint-staged"
	},
	"config": {
		"commitizen": {
			"path": "./node_modules/cz-conventional-changelog"
		}
	},
	"lint-staged": {
		"(src|tests)/**/*.(t|j)s": [
			"pnpm format",
			"pnpm lint:fix"
		]
	},
	"prisma": {
		"schema": "./src/infra/storages/db/prisma/schema.prisma"
	},
	"dependencies": {
		"@nestjs/common": "^10.2.5",
		"@nestjs/core": "^10.2.5",
		"@nestjs/platform-express": "^10.2.5",
		"@nestjs/swagger": "^7.1.11",
		"@prisma/client": "^5.3.1",
		"class-transformer": "^0.5.1",
		"class-validator": "^0.14.0",
		"dotenv": "^16.3.1",
		"dotenv-cli": "^7.3.0",
		"husky": "^8.0.3",
		"prisma": "^5.3.1",
		"reflect-metadata": "^0.1.13"
	},
	"devDependencies": {
		"@commitlint/config-conventional": "^17.7.0",
		"@nestjs/cli": "^10.1.17",
		"@nestjs/testing": "^10.2.5",
		"@types/jest": "^29.5.5",
		"@types/node": "^20.6.2",
		"@typescript-eslint/eslint-plugin": "^6.7.2",
		"@typescript-eslint/parser": "^6.7.2",
		"commitizen": "^4.3.0",
		"commitlint": "^17.7.2",
		"cz-conventional-changelog": "^3.3.0",
		"eslint": "^8.49.0",
		"eslint-config-standard-with-typescript": "^39.1.1",
		"eslint-plugin-import": "^2.25.2",
		"eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
		"eslint-plugin-promise": "^6.0.0",
		"jest": "^29.7.0",
		"lint-staged": "^14.0.1",
		"prettier": "^3.0.3",
		"supertest": "^6.3.3",
		"ts-jest": "^29.1.1",
		"typescript": "^5.2.2"
	}
}
